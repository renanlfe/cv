---
import type { HeroProps } from "@types";
import { Image } from "astro:assets";
import { SITE_CONFIG } from "@config";
type Props = HeroProps;

const { greeting, name, tagline, profilePhoto } = Astro.props;
const { socialLinks } = SITE_CONFIG;
---

<section
  class="flex min-h-[90vh] flex-col items-center justify-center py-24"
  id="#hero"
>
  <!-- Profile Photo -->
  <div class="mb-8">
    <Image
      src={profilePhoto}
      alt={name}
      width={200}
      height={200}
      class="rounded-full object-cover"
    />
  </div>

  <!-- Greeting -->
  <p class="mb-2 text-base text-[var(--text-muted)]">
    {greeting}
  </p>

  <!-- Name -->
  <h1
    class="mb-6 font-serif text-5xl font-bold tracking-tight text-[var(--text-main)] sm:text-6xl md:text-7xl"
  >
    {name}
  </h1>

  <!-- Tagline -->
  <p class="mb-12 max-w-2xl text-center text-lg text-[var(--text-muted)]">
    <span class="text-[var(--text-main)]">A tecnologia</span> me fascina como ferramenta
    para a <span class="text-primary">resolução de problemas</span>.
  </p>

  <!-- Social Links Grid -->
  <div class="mb-16 grid w-full max-w-xl grid-cols-2 gap-4">
    {
      socialLinks.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 rounded-lg border-2 border-[var(--text-muted)] px-6 py-4 text-base font-medium text-[var(--text-main)] transition-all hover:border-primary hover:bg-primary hover:text-white"
        >
          {link.text === "LinkedIn" && (
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          )}
          {link.text === "Github" && (
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
          )}
          {link.text === "Youtube" && (
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
            </svg>
          )}
          {link.text === "Twitter" && (
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
            </svg>
          )}
          {link.text === "Dribbble" && (
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.628 0-12 5.373-12 12s5.372 12 12 12 12-5.373 12-12-5.372-12-12-12zm9.885 11.441c-2.575-.422-4.943-.445-7.103-.073-.244-.563-.497-1.125-.767-1.68 2.31-1 4.165-2.358 5.548-4.082 1.35 1.594 2.197 3.619 2.322 5.835zm-3.842-7.282c-1.205 1.554-2.868 2.783-4.986 3.68-1.016-1.861-2.178-3.676-3.488-5.438.779-.197 1.591-.314 2.431-.314 2.275 0 4.368.779 6.043 2.072zm-10.516-.993c1.331 1.742 2.511 3.538 3.537 5.381-2.43.715-5.331 1.082-8.684 1.105.692-2.835 2.601-5.193 5.147-6.486zm-5.527 8.834c0-.167.008-.334.015-.5 3.418.005 6.588-.355 9.507-1.081.188.411.365.823.53 1.237-3.497.932-6.445 2.643-8.822 5.132-1.44-1.613-2.23-3.72-2.23-5.788zm3.973 7.074c2.178-2.555 4.904-4.315 8.178-5.288.819 2.12 1.481 4.312 1.987 6.575-1.046.412-2.187.636-3.384.636-2.657 0-5.047-1.082-6.781-2.923zm9.781 2.665c-.428-2.051-1.018-4.038-1.766-5.962 1.942-.322 4.098-.276 6.458.14-.384 2.555-1.753 4.783-3.692 6.322z" />
            </svg>
          )}
          <span>{link.text}</span>
        </a>
      ))
    }
  </div>

  <!-- Scroll Indicator -->
  <div class="animate-bounce">
    <svg
      class="h-6 w-6 text-[var(--text-muted)]"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
